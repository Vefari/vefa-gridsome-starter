{
    env: {
        browser: true,
        node: true,
        es6: true
    },
    globals: {
      Vue: true,
      process: true
    },
    parser: "vue-eslint-parser",
    parserOptions: {
        sourceType: "module",
        ecmaVersion: 2018
    },
    plugins: ["gridsome"],
    rules: {
        "gridsome/format-query-block": "error",
        "no-debugger": 0,
        indent: ["error", 4],
        "func-call-spacing": [2],
        "space-before-function-paren": ["error", "always"],
        "no-unused-vars": ["error", { args: "none" }],
        "no-console": ["off", "allow"]
    },
}
