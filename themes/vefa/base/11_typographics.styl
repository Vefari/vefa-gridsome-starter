// --aa: TEXT ANTI-ALIASING
// +++++++++++++++++++++++++++++++++
--def{":"}
    &aliased
        +contains()
            -webkit-font-smoothing: antialiased

    &truncate
        +contains()
            display: table
            table-layout: fixed
            width: 100%
            white-space: nowrap

            > *
                display: table-cell
                max-width: 100%
                overflow: hidden
                text-overflow: ellipsis
                white-space: nowrap
                word-wrap: normal


    &noWrap
        +contains()
            white-space: nowrap
