// MODULE ORDER
// +++++++++++++++++++++++++++++++++

--index{":"}
    &init
        +contains()
            order: -1

    &flow
        +contains()
            order: initial

    &start
        +contains()
            order: 0

    &next
        +contains()
            order: 1

    &end
        +contains()
            order: 100


