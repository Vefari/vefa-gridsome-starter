// @domain      MODULE DECLARATIONS
// @namespace   module
// +++++++++++++++++++++++++++++++++

.module{":"}
    +contains()
        display: block
        float: none
        position: relative
        visibility: visible

    &block
        +contains()
            display: block

    &static
        +contains()
            flex: none

    &balance
        +contains()
            flex: 1 1 auto

    &fit
        +contains()
            flex: initial //0 1 auto

    &fill
        +contains()
            flex: 1 0 100%

    &bounds
        +contains()
            bottom: 0
            height: 100%
            left: 0
            position: absolute
            right: 0
            top: 0
            object-fit: cover
            width: 100%


