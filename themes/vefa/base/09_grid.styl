// GAPS
// ++++++++++++++++++++++++++++++++++
--gap{":"}
    if (!!(limits.gaps)px)
        &xyEq
            +contains()
                --gap-xyEq: 1px

            for i in limits.gaps
                num = i/100
                num = (i is 0) ? 0 : num
                num = (i is 10) ? .125 : num

                &{i}
                    +contains()
                        --gap-xyEq: ratio(num)

    if (!!(limits.rowGaps)px)
        &xEq
            +contains()
                --gap-xEq: 1px

            for i in limits.rowGaps
                num = i/100
                num = (i is 0) ? 0 : num
                num = (i is 10) ? .125 : num

                &{i}
                    +contains()
                        --gap-xEq: ratio(num)

    if (!!(limits.colGaps)px)
        &yEq
            +contains()
                --gap-yEq: 1px

            for i in limits.colGaps
                num = i/100
                num = (i is 0) ? 0 : num
                num = (i is 10) ? .125 : num

                &{i}
                    +contains()
                        --gap-yEq: ratio(num)



