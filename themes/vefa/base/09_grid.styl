// @domain      GRID CONTAINERS
// @namespace   grid
// +++++++++++++++++++++++++++++++++

:root
    --col-template: repeat(auto-fill, 1fr)
    --row-template: auto
    --gap-xyEq: 0px
    --gap-xEq: var(--gap-xyEq)
    --gap-yEq: var(--gap-xyEq)


.grid{":"}
    +contains()
        --gap-xyEq: 0px
        --gap-xEq: var(--gap-xyEq)
        --gap-yEq: var(--gap-xyEq)
        --grid-iso-xyEq: 0
        --grid-iso-xEq: var(--grid-iso-xyEq)
        --grid-iso-yEq: var(--grid-iso-xyEq)
        --grid-iso-xStart: var(--grid-iso-xEq)
        --grid-iso-xEnd: var(--grid-iso-xEq)
        --grid-iso-yStart: var(--grid-iso-yEq)
        --grid-iso-yEnd: var(--grid-iso-yEq)
        --col-template: 1fr
        --row-template: auto

        display: grid
        gap: var(--gap-yEq) var(--gap-xEq)
        grid-template-columns: var(--col-template)
        grid-template-rows: var(--row-template)
        grid-auto-rows: var(--row-template)
        grid-auto-columns: var(--col-template)
        // visibility: visible

        & > * + *
            margin-top: 0

    &auto
        +contains()
            --col-template: repeat(auto-fill, 1fr)
            grid-auto-flow: row

    &content
        +contains()
            // --col-template: 1fr -- already define on .grid:
            --row-template: 1fr
            grid-template-columns: var(--grid-iso-xStart) var(--col-template) var(--grid-iso-xEnd)
            grid-template-rows: var(--grid-iso-yStart) var(--row-template) var(--grid-iso-yEnd)

     &h
        +contains()
            // --col-template: 1fr // already defined on .grid:
            // --col-template: min-content
            grid-auto-flow: row

    &hDense
        +contains()
            grid-auto-flow: column dense

    &v
        +contains()
            grid-auto-flow: column

    &vDense
        +contains()
            grid-auto-flow: column dense






