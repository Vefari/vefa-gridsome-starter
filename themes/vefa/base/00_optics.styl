// @domain          ELEMENT OPTICS
// @namespace:      optics
// +++++++++++++++++++++++++++++++++

[v-cloak]
    // special for VueJS
    display: none !important


.optics{":"}
    &a11y
        +contains()
            clip-path: rect(0,0,0,0)
            left: -100vw
            overflow: hidden
            position: absolute //  !important
            width: 0

    &no
        +contains()
            display: none
            visibility: hidden

    &yes
        +contains()
            clip-path: none
            left: 0
            overflow: visible
            position: static
            width: auto
            visibility: visible
            // display: inherit

    &voidRxn
        +contains()
            pointer-events: none

    &alpha
        for num in (0..100)
            if num % 5 == 0
                &{num}
                    +contains()
                        opacity: (num/100)

    &xyEq
        &--hide
            +contains()
                overflow: hidden

&--opx{":"}
    &set
        for num in (0..100)
            if num % 5 == 0
                &{num}
                    +contains()
                        opacity: (num/100)
    &shift
        for num in (0..100)
            if num % 5 == 0
                &{num}
                    +contains()
                        +--all-states()
                            opacity: (num/100)

